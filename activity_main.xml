<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="315dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/the_voice"
        />

    <EditText
        android:id="@+id/singerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-250dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Artist Name"
        android:textColor="#0A1200"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-120dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:layout_below="@+id/singerName"
        android:shadowRadius="1.6"
        android:text="Singer Name ?"
        android:textColor="#AEC905"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/singerName"
        android:layout_marginTop="10dp"
        android:maxHeight="25dp"
        android:text="Submit"
        android:textColor="#D5ECFF"
        app:backgroundTint="#031945" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:maxHeight="25dp"
        android:text="Change FontSize"
        android:textColor="#F3C7DF"
        android:textSize="14dp"
        android:textStyle="bold"
        app:backgroundTint="#390642" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="240dp"
        android:maxHeight="25dp"
        android:text="Change TxtColor"
        android:textColor="#F3C7DF"
        android:textSize="14dp"
        android:textStyle="bold"
        app:backgroundTint="#390642" />


</RelativeLayout>